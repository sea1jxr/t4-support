{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "T4 Text Template",
	"patterns": [
		{
			"match": "(<#@|<#=|<#\\+|<#)(.+?)(#>)",
			"name": "constant.t4",
			"captures": {
				"1": { "name": "constant.t4" },
				"2": {
					"patterns": [
						{"include": "source.cs"}
					]
				},
				"3": { "name": "constant.t4" },
				"4": { "name": "constant.t4" }
			}
		},
		{
			"begin": "(^|\\G)(\\s*)(<#=|<#@|<#|<#\\+)(.*?)?$",
			"beginCaptures": {
				"3":{
					"name": "constant.t4"
				},
				"4":{
					"patterns": [
						{
							"include": "source.cs"
						}
					]
				}
			},
			"end": "(^|\\G)(\\s*#>)\\s*$",
			"endCaptures": {
				"0": {
					"name": "constant.t4"
				}
			},
			"patterns": [
				{
					"begin": "(^|\\G)(.*?)",
					"while": "(^|\\G)(?!(\\s*#>)\\s*$)",
					"contentName": "meta.embedded.block.csharp",
					"patterns": [
						{
							"include": "source.cs"
						}
					]
				}
			]
		}
	],
	"scopeName": "source.t4"
}