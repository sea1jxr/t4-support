{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "T4 Text Template",
	"patterns": [
		{
			"match": "(<#@)(.*)(#>)",
			"name": "constant.tt",
			"captures": {
				"1": { "name": "constant.tt" },
				"2": {
					"patterns": [
						{"include": "source.cs"}
					]
				},
				"3": { "name": "constant.tt" }
			}
		},
		{
			"begin": "(<#=|<#)",
			"beginCaptures": {
				"0":{
					"name": "constant.tt"
				}
			},
			"end": "#>",
			"endCaptures": {
				"0": {
					"name": "constant.tt"
				}
			},
			"patterns": [
				{ "include": "source.cs" }
			]
		}
	],
	"scopeName": "source.tt"
}