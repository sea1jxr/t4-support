{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "T4 Text Template",
	"patterns": [
		{
			"match": "(<#@|<#=|<#\\+|<#)(.*)(#>)",
			"name": "constant.tt",
			"captures": {
				"1": { "name": "constant.tt" },
				"2": {
					"patterns": [
						{"include": "source.cs"}
					]
				},
				"3": { "name": "constant.tt" }
			}
		},
		{
			"begin": "(^|\\G)(\\s*)(<#=|<#|<#\\+)(\\s+[^`~]*)?$",
			"beginCaptures": {
				"3":{
					"name": "constant.tt"
				}
			},
			"end": "(^|\\G)(#>)\\s*$",
			"endCaptures": {
				"0": {
					"name": "constant.tt"
				}
			},
			"patterns": [
				{ 
					"begin": "(^|\\G)(\\s*)(.*)",
					"while": "(^|\\G)(?!(#>)\\s*$)",
					"contentName": "meta.embedded.block.csharp",
					"patterns": [
						{
							"include": "source.cs"
						}
					]
				}
			]
		}
	],
	"scopeName": "source.tt"
}